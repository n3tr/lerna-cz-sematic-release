{
  "name": "root",
  "private": true,
  "devDependencies": {
    "cz-lerna-changelog": "^2.0.2",
    "git-cz": "^3.0.1",
    "lerna": "^3.13.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  },
  "scripts": {
    "commit": "npx git-cz",
    "test": "lerna run test",
    "publish:rc": "lerna publish --canary --dist-tag next --preid next --exact --ignore-prepublish --yes",
    "publish:prod": "lerna punlish --exact --ignore-prepublish --yes"
  },
  "workspaces": [
    "packages/*"
  ]
}
